<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.drivers.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
    <servlet>
    	<servlet-name>driverinsert</servlet-name>
    	<servlet-class>com.drivers.DriverInsert</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>driverinsert</servlet-name>
    	<url-pattern>/insert</url-pattern>
    </servlet-mapping>

	<servlet>
		<servlet-name>updatedriver</servlet-name>
		<servlet-class>com.drivers.UpdateDriverServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updatedriver</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>deletedriver</servlet-name>
		<servlet-class>com.drivers.DeleteDriverServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deletedriver</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
		
	

</web-app>